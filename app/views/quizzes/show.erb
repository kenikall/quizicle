<h1>Good Luck!</h1>

<%= Subject.find(@quiz.subject_id).name %><br>
<%=@problem = @quiz.create_problem%>

<div class="question">
<% if session[:id] %>
  <form action="/students/<%= session[:id] %>" method="post">
    <input type="text" name=<%="@problem.response"%>>
    <input type="submit" value="answer">
  </form>
<% else %>
  <form action="/quizzes/guest/<%=@quiz.id%>" method="post">
     <input type="text" name="response">
    <input type="submit" value="answer">
  </form>
<% end %>
</div>


